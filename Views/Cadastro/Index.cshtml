@{
    ViewData["Title"] = "Cadastro";
}
<head>
    <link rel="stylesheet" href="~/css/estilo.css" />
</head>
 <div class="grupo">
            <img class="logo" src="~/img/Logo Instadev.png" alt="Logo do Instadev">
            <p class="grupo_texto_cadastro">Cadastre-se para ver fotos e vídeos dos seus amigos.</p>
            <form enctype="multipart/form-data" method="POST" action='@Url.Action("Cadastrar")' class="Form_Login">
                <input type="text" pattern="[^;]*" name="Nome" placeholder="Nome completo"required>
                <input type="text "pattern="[^;]*" name="Nome De Usuario" placeholder="Nome de usuário" required>
                <input type="email "pattern="[^;]*" name="Email" placeholder="Email" required>
                <input type="password "pattern="[^;]*" name="Senha" placeholder="Senha" required>
                <button class="btn" type="submit">Cadastre-se</button>
            </form>
            
            <p class="grupo_texto">Ao se cadastrar, você concorda com nossos Termos, Política de Dados e Política de Cookies. </p>
        </div>

        <div class="grupo">
            <span class="grupo_texto1">Tem uma conta? <a class="logar" asp-area="" asp-controller="Login" asp-action="Index">Conecte-se</a></span>
        </div>
        <div class="tenha_o_app_txt">
            <p>Obtenha o aplicativo</p>
        </div>
        <div class="img_link">
            <a href="https://apps.apple.com/br/app/instagram/id389801252"><img src="~/img/app_store 1.png" alt="Link de redirecionamento para a App Store"></a>
            <div class="espaco_entre_img"></div>
            <a href="https://play.google.com/store/apps/details?id=com.instagram.android&hl=pt_BR&gl=US"><img src="~/img/google_play 1.png" alt="Link de redirecionamento para a Play Store"></a>
        </div>
        <div class="erro">@TempData.Peek("Mensagem")</div>